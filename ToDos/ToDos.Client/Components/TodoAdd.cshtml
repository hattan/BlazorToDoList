@using ToDos.Shared

<form class="form-inline">
    <div class="form-group">
        <input type="text" class="form-control"  @bind(NewTodo)>
    </div>
    <button class="btn btn-primary" @onclick(AddItem)>Add</button>
</form>
@functions
{
    public Func<string, Task> AddToDo { get; set; }

    public string NewTodo = string.Empty;

    public void AddItem()
    {

        NewTodo = GetCowText();
        AddToDo(NewTodo);
        NewTodo = "";
    }

    public string GetCowText()
    {
        string[] cowSayings = new[] { "mooo", "where's the milk?", "no farms!", "I love cheese!" };
        var rand = new Random();
        return cowSayings[rand.Next(cowSayings.Length)];
    }
}
